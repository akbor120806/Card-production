<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.ConfirmCompletionController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Confirm Delivery Completion" style="-fx-font-size:18;"/>

    <ComboBox fx:id="ordersCombo" promptText="Select delivered order"/>
    <TextField fx:id="signatureField" promptText="Customer signature / code"/>
    <Button text="Upload Proof" onAction="#handleUploadProof"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.ViewAssignedController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Delivery Dashboard" style="-fx-font-size:18;"/>

    <TextField fx:id="filterField" promptText="Filter by location or urgency"/>
    <ListView fx:id="deliveryListView" prefHeight="200"/>

    <Label fx:id="detailsLabel" text="Select an order to view details"/>

    <Button text="Ready to Deliver" onAction="#handleReadyToDeliver"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>

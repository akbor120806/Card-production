<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.FailedDeliveryController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Failed Delivery" style="-fx-font-size:18;"/>

    <ComboBox fx:id="ordersCombo" promptText="Select failed order"/>
    <ComboBox fx:id="reasonCombo" promptText="Failure reason"/>
    <TextArea fx:id="detailsArea" promptText="Supporting details" prefRowCount="3"/>

    <Button text="Save Failed Delivery" onAction="#handleSaveFailedDelivery"/>
    <Button text="Reschedule" onAction="#handleReschedule"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>

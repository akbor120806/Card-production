<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.card_production.Ashik.CommunicateCustomerController">
    <top>
        <Label text="Contact Customer" style="-fx-font-size:18;"
               BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <TextArea fx:id="chatArea" editable="false" wrapText="true"/>
    </center>
    <bottom>
        <VBox spacing="5" alignment="CENTER">
            <TextField fx:id="messageField" promptText="Type message to customer"/>
            <HBox spacing="8" alignment="CENTER">
                <Button text="Send" onAction="#handleSend"/>
                <Button text="Back to Dashboard" onAction="#handleBack"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

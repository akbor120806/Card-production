<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.DownloadInvoiceController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Download Invoice / Receipt" style="-fx-font-size:18;"/>

    <ComboBox fx:id="completedOrdersCombo" promptText="Select completed order"/>
    <Button text="Download Invoice" onAction="#handleDownload"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.ReceivePaymentController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="COD Payment" style="-fx-font-size:18;"/>

    <ComboBox fx:id="codOrdersCombo" promptText="Select COD order"/>
    <TextField fx:id="amountField" promptText="Amount to collect"/>
    <ComboBox fx:id="paymentTypeCombo" promptText="Payment type (Cash/Digital)"/>

    <Button text="Confirm Payment" onAction="#handleConfirmPayment"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.UpdateStatusController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Update Delivery Status" style="-fx-font-size:18;"/>

    <ComboBox fx:id="ordersCombo" promptText="Select order"/>
    <ComboBox fx:id="statusCombo" promptText="Select status"/>
    <Button text="Update Status" onAction="#handleUpdateStatus"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>

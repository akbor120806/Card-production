<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.ViewRouteController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Delivery Route" style="-fx-font-size:18;"/>

    <ComboBox fx:id="ordersCombo" promptText="Select order"/>
    <Button text="View Map" onAction="#handleViewMap"/>

    <TextArea fx:id="routeArea" prefRowCount="6" editable="false"
              promptText="Route details will appear here"/>

    <Button text="Start Navigation" onAction="#handleStartNavigation"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.TrackOrderStatusController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="My Orders" style="-fx-font-size:18;"/>

    <ListView fx:id="ordersListView" prefHeight="200"/>

    <Label fx:id="statusLabel" text="Select an order to view status"/>

    <HBox spacing="10">
        <Button text="Refresh" onAction="#handleRefresh"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.MakePaymentController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Make Online Payment" style="-fx-font-size:18;"/>

    <ComboBox fx:id="unpaidOrdersCombo" promptText="Select unpaid order"/>
    <ComboBox fx:id="paymentMethodCombo" promptText="Select payment method"/>
    <TextField fx:id="transactionIdField" promptText="Transaction ID / Reference"/>

    <Label fx:id="invoiceLabel" text="Invoice will appear here"/>

    <Button text="Pay Now" onAction="#handlePayNow"/>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<VBox spacing="8" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.card_production.Ashik.PlaceNewProductOrderController">
    <Label text="Place New Order" style="-fx-font-size:18;"/>

    <ComboBox fx:id="productCombo" promptText="Select Product"/>
    <TextField fx:id="quantityField" promptText="Quantity"/>
    <TextArea fx:id="customizationArea" promptText="Customization details" prefRowCount="3"/>

    <Label fx:id="orderSummaryLabel" text="Order summary will appear here"/>

    <HBox spacing="10">
        <Button text="Review Order" onAction="#handleReviewOrder"/>
        <Button text="Proceed to Payment" onAction="#handleProceedToPayment"/>
    </HBox>

    <Label fx:id="messageLabel" visible="false"/>
</VBox>

